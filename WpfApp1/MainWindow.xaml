<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Messwerte verarbeiten" Height="300" Width="500">
    <Grid Margin="10" Background="BlanchedAlmond">
       


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBox x:Name="TextFirst" Margin="0,70,0,0" Width="100" Height="100" FontWeight="Bold" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button x:Name="btnSubmit" Margin="0,60,0,5" FontWeight="Bold" Width="150" Height="35" Click="ButtonSubmit_Click">Random Zahl 0-400</Button>
            <Button x:Name="btnStats" Width="150" Height="35" FontWeight="Bold" Click="ButtonStats_Click">Random Zahl 400-800</Button>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <ListBox x:Name="ListFirst" Margin="0,70,0,0" Width="100" Height="100" FontWeight="Bold"></ListBox>
        </StackPanel>





    </Grid>
</Window>
